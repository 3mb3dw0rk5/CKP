{
	"name": "chrome-keepass",
	"version": "0.0.1",
	"manifest_version": 2,
	"description": "KeePass integration for browser Chrome",
	"icons": {
		"16": "icons/keepass_16x16.png",
		"48": "icons/keepass_48x48.png",
		"128": "icons/keepass_128x128.png"
	},

	"oauth2": {
	    "client_id": "38107774587-8ean570q24rbtf32v4m7hqcn2lb4fk9f.apps.googleusercontent.com",
	    "scopes": [
	      "https://www.googleapis.com/auth/drive.readonly"
	    ]
	  },
	
	"page_action": {
          "default_icon": {                    // optional
            "19": "icons/keepass_19x19.png",           // optional
            "38": "icons/keepass_38x38.png"            // optional
          },
          "default_title": "Keepass",      // optional; shown in tooltip
          "default_popup": "popups/popup.html"        // optional
        },
        
	/*
	"browser_action": {
		"default_icon": {
		  "19": "icons/keepass_19x19.png",
		  "38": "icons/keepass_38x38.png"
		},
		"default_title": "Keepass",
		"default_popup": "popups/popup.html"
	},
	*/

	"options_page": "options/options.html",
	"background": {
		"scripts": [
			"background/background.js", 
			"lib/jquery-2.1.1.min.js"
			]
		},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["keepass.js", "lib/jquery-2.1.1.min.js", "lib/angular.min.js"],
			"css": [],
			"run_at": "document_idle",
			"all_frames": true
		}
	],
	"web_accessible_resources": [
		"jquery.min.map",
		"icons/key_16x16.png",
		"icons/key_24x24.png",
		"images/ui-bg_flat_0_aaaaaa_40x100.png",
		"images/ui-bg_flat_0_aaaaaa_40x100.png",
		"images/ui-bg_flat_75_ffffff_40x100.png",
		"images/ui-bg_glass_55_fbf9ee_1x400.png",
		"images/ui-bg_glass_65_ffffff_1x400.png",
		"images/ui-bg_glass_75_dadada_1x400.png",
		"images/ui-bg_glass_75_e6e6e6_1x400.png",
		"images/ui-bg_glass_95_fef1ec_1x400.png",
		"images/ui-bg_highlight-soft_75_cccccc_1x100.png"
	],
	"permissions": [
		"contextMenus",
		
	    "https://docs.google.com/feeds/",
	    "https://docs.googleusercontent.com/",
	    "https://spreadsheets.google.com/feeds/",
	    "https://ssl.gstatic.com/",
	    "https://www.googleapis.com/",
	/*
		"clipboardWrite",
		"tabs",
		"webRequest",
		"webRequestBlocking",
	*/
		"https://*/*",
		"http://*/*"
	/*
		"http://localhost:19455/",
		"http://localhost/",
		"https://raw.github.com/"
	*/
	]
}
