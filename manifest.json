{
	"name": "chrome-keepass",
	"version": "0.0.1",
	"manifest_version": 2,
	"description": "Read-only KeePass integration",
	"icons": {
		"16": "icons/keepass_16x16.png",
		"48": "icons/keepass_48x48.png",
		"128": "icons/keepass_128x128.png"
	},

	"oauth2": {
	    "client_id": "38107774587-8tttlo318g83eg9if6i1850eer28nk2s.apps.googleusercontent.com",
	    "scopes": [
	      "https://www.googleapis.com/auth/drive.readonly"
	    ]
	  },
	
	"page_action": {
          "default_icon": {                    // optional
            "19": "icons/keepass_19x19.png",           // optional
            "38": "icons/keepass_38x38.png"            // optional
          },
          "default_title": "Keepass found a password field",      // optional; shown in tooltip
		  "default_popup": "popups/popup.html"
        },
        
	/*
	"browser_action": {
		"default_icon": {
		  "19": "icons/keepass_19x19.png",
		  "38": "icons/keepass_38x38.png"
		},
		"default_title": "Keepass",
		"default_popup": "popups/popup.html"
	},
	*/

	"options_page": "options/options.html",
	"background": {
		"scripts": [
			"background/background.js", 
			"lib/jquery-2.1.1.min.js",
			"lib/jbinary.js",
			"lib/forge.min.js"
			],
		"persistent": false
		},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["keepass.js", "lib/jquery-2.1.1.min.js", "lib/angular.min.js"],
			"css": []
		}
	],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"web_accessible_resources": [
		"/icons/key_16x16.png",
		"/icons/key_24x24.png"
	],
	"permissions": [
		"storage",  //needed to use local/sync storage
		"tabs",   //needed to read the url of the tab, which is the match to the password file
		"identity",

		//following urls are needed for google docs access
	    "https://docs.google.com/feeds/",
	    "https://docs.googleusercontent.com/",
	    "https://spreadsheets.google.com/feeds/",
	    "https://ssl.gstatic.com/",
	    "https://www.googleapis.com/"
	/*
		"clipboardWrite",
		"tabs",
		"webRequest",
		"webRequestBlocking",
	*/

	/*
		"http://localhost:19455/",
		"http://localhost/",
		"https://raw.github.com/"
	*/
	]
}
